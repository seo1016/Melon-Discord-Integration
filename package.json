{
  "name": "melon-discord-integration",
  "version": "1.0.0",
  "description": "Melon Player Discord Rich Presence Integration",
  "author": "seoseunghun3",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc --build && electron .",
    "build": "tsc --build && electron-builder -w",
    "dist": "tsc --build"
  },
  "build": {
    "productName": "MelonDiscordIntegration",
    "appId": "com.ssh.melon-discord-integration",
    "icon": "assets/melon-logo.ico",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "compression": "maximum",
    "asar": true,
    "extraFiles": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "seo1016",
        "repo": "Melon-Discord-Integration",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.2.0",
    "active-win": "^8.0.0",
    "axios": "^1.8.1",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "iconv-lite": "^0.6.3",
    "node-window-manager": "^2.2.4",
    "ps-list": "^7.2.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.19",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.1.6"
  }
}
